.previews
  .preview
    height 200px
    background-size contain
    background-position center center
    background-repeat no-repeat
    width 100%
    position absolute
    top 50%
    margin -100px 0 0 0
    transform scale(1.0)
    opacity 1
    z-index -1000
    transition all 300ms ease

    &.notVisible
      transform scale(0.9)
      opacity 0
      z-index 1

