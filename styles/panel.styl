.panel
  position: absolute
  top 0
  right 0
  width 50%
  height 100%
  box-sizing border-box
  padding 30px 50px 100px 30px
  transform translateX(75%)
  transition all 300ms ease
  background-color rgba(255,255,255,0.6)

  &.active
    transform translateX(0)

    p
      transform translateX(0)
      opacity: 1

  .panel-link
    color $dark
    font-size 30px
    line-height 36px
    margin-bottom 50px
    display inline-block

  .close
    height: 20px
    width: 20px
    float: right
    display inline-block
    position relative
    margin-top 10px
    cursor: pointer

    &:before,
    &:after
      content ''
      width: 3px
      height 100%
      position: absolute
      left 8px
      top 0
      background black

    &:before
      transform rotate(45deg)

    &:after
      transform rotate(-45deg)

  p
    font-size 20px
    line-height 30px
    margin-bottom 20px
    transform translateX(150px)
    transition all 200ms ease
    opacity: 0