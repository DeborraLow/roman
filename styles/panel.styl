@keyframes fade
  0%
    opacity 0

  100%
    opacity 1

.panel
  position: absolute
  top 0
  right 0
  width 50%
  height 100%
  box-sizing border-box
  padding 30px 50px 100px 30px
  transform translateX(100%)
  transition all 500ms ease
  background-color rgba(#ddd,1)
  z-index 100000000000
  display none

  &.about
    z-index 10
    display block

    .panel-link
      opacity: 1
      transition transform 500ms 0ms ease, opacity 500ms 1000ms ease

      &.notVisible
        opacity 0

  &.active
    transform translateX(0)

    .panel-link
      transform translateX(0) !important

    p
      transform translateX(0)
      opacity: 1

  .panel-content
    overflow scroll
    height 100%
    box-sizing border-box

    & > div
      padding-bottom 30px

  .panel-link
    color $dark
    font-size 30px
    line-height 36px
    margin-bottom 50px
    display inline-block
    transform translateX(-140px)
    transition transform 500ms ease
    cursor pointer

  .close
    height 20px
    width 20px
    float right
    display inline-block
    position relative
    margin-top 10px
    cursor pointer

    &:before,
    &:after
      content ''
      width: 3px
      height 100%
      position: absolute
      left 8px
      top 0
      background black

    &:before
      transform rotate(45deg)

    &:after
      transform rotate(-45deg)

  p
    font-size 20px
    line-height 30px
    margin-bottom 20px
    transition all 500ms ease
    opacity: 0

@media $media-mobile
  .panel
    width 100%
    padding 20px 20px 60px 30px

    &.about
      .panel-link
        transform translateX(-70px)

    .panel-link
      font-size 24px
      line-height 30px
      transform translateX(-90px)
      text-align: right

      .justMobile
        display: none