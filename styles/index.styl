@keyframes fade
  0%
    opacity: 0

  100%
    opacity: 1

@-webkit-keyframes fadeSlide
  0%
    -webkit-transform translateY(100px)

  100%
    -webkit-transform translateY(0)

.index
  background white
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  z-index 10
  display none
  animation: fade 600ms ease

  &.active
    display block !important

    .grid-container
      .grid
        transition all 1000ms ease
        transform translateY(0)

  header
    position absolute

    h1 a
      color: $dark

    .bigclose
      top 28px
      bottom 0

  .grid-container
    width 100%
    height 100%
    overflow-y scroll
    padding 100px 0
    animation fadeSlide 600ms ease

    .grid
      margin 0 auto
      width 840px
      column-count 3
      column-gap 0px
      font-size 0
      transform translateY(100px)

      li
        margin-bottom 10px
        padding 15px
        box-sizing border-box

        a
          display block

          img
            width: 100% !important;
            height: auto !important;
            transition all 300ms ease
            -webkit-backface-visibility hidden
            -webkit-transform translateZ(0)

            &:hover
              opacity: 0.5



